    HostName localhost
    Port 5322

###############################################################################
# General options.
###############################################################################
Host *
    ControlMaster auto
    ControlPath ~/.ssh/socket_%r@%h-%p
    ControlPersist 4h
    ForwardAgent yes
    ForwardX11 yes
    ServerAliveInterval 5
    ServerAliveCountMax 2
    ExitOnForwardFailure yes
    TCPKeepAlive yes
    StrictHostKeyChecking no
    HostKeyAlgorithms=+ssh-rsa


