###############################################################################
# Access via halclark.ca + bowax reverse port forwarding.
###############################################################################

Host bowax_proxy
    ProxyJump root@halclark.ca
    HostName localhost
    Port 2322

Host bowax_facade
    ProxyJump root@halclark.ca:22,hal@localhost:2322
    HostName bowax
    Port 2222
    StrictHostKeyChecking no
    LogLevel ERROR

